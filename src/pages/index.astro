<style>
  #presentation {
    font-family: PPMonumentExtended;
    font-weight: normal;
    color: white;
  }

  #presentation #quote-1 {
    margin-top: 3rem;
  }

  #presentation h1 {
    font-size: 4rem;
    font-weight: bold;
  }

  #presentation .subtitle {
    font-size: 1.2rem;
  }

  #presentation .c-red {
    color: var(--accent);
  }

  #container-01 {
    position: relative;
  }

  #pic-container {
    border: solid 2px rgb(255, 255, 255);
    width: 18rem;
    height: 18rem;
    position: relative;
  }

  #pic-container .image {
    width: 19rem;
    height: 19rem;
    transform: scaleX(-1);
    position: absolute;
    left: 2.5rem;
    top: -2.5rem;
  }

  #description-container {
    display: inline-block;
    padding: 0.8rem;
    background-color: black;
    color: white;

    position: absolute;
    bottom: -1.5rem;
    left: 10rem;
  }
</style>
