---
import LinkIcon from "../icons/link.astro";
import Github from "../icons/github.astro";
import Iconify from "./Iconify.astro";

interface Props {
  name: string;
  description: string;
  technologies: string[];
  links: any[];
}

const { name, description, technologies, links } = Astro.props;
---
<!-- <LinkIcon size={16} />
                <span class="ml-2 text-sm">{name}</span> -->
<div id="project" class="flex dir-col items-center py-7 mr-10">
  <div>
    <!-- NAME -->
    <p class="text-lg text-accent">{name.toUpperCase()}</p>
    <!-- DESCRIPTION -->
    <p class="text-base font-montserrat">{description}</p>

    <!-- LINKS -->
    <div class="my-3">
      <ul id="project-links">
        {
          links.map(({ name, link }) => (
            <label class="mr-6">
              <a
                id={`${name}-link`}
                class="inline-flex cursor-pointer"
                href={link}
                target="_blank"
              >
                <Iconify label={name} iconSize={20}/>
              </a>
            </label>
          ))
        }
      </ul>
    </div>
    <!-- TAGS -->
    <ul>
      {
        technologies.map((tech) => (
          <li>
            <span class="font-ppNeueMontreal text-sm">{tech}</span>
          </li>
        ))
      }
    </ul>
  </div>
</div>

<style>
  #project ul {
    display: inline-flex;
    gap: 8px;
    flex-wrap: wrap;
  }

  #project li {
    background: black;
    border-radius: 100px;
    color: white;
    font-size: 0.8rem;
    font-weight: lighter;
    padding: 0.2rem 1rem;
    margin: 0.5rem 0;
    border: solid 1px #555;
    font-size: 0.9rem;
  }

  #project-links {
    font-weight: normal;
    font-size: small;
  }
  
</style>
