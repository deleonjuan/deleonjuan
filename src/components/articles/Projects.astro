---
import { projects } from "@cv";
import ProjectsIveDone from "../projectsIveDone.astro";
---

<article id="projects" class="min-h-screen flex flex-col justify-center">
  <div class="mb-24">
    <p>Projects</p>
    <p class="text-5xl font-bold">I've worked on</p>
  </div>

  {
    projects.map((project) => (
      <ProjectsIveDone
        name={project.name}
        description={project.description}
        technologies={project.technologies}
        links={project.links}
      />
    ))
  }
</article>
