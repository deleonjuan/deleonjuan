---
import { Image } from "astro:assets";

import ProfilePic from "../../images/profilePic.webp";

import { basics } from "@cv";
import SectionTitle from "../SectionTitle.astro";
---

<article
  id="about"
  class="w-full min-h-screen flex flex-col justify-center items-center bg-[#F5F5F7] py-20 overflow-x-hidden"
>
  <div
    class="w-full md:max-w-screen-md lg:max-w-screen-lg xl:max-w-screen-xl 2xl:max-w-screen-2xl 2xl:px-16"
  >
    <SectionTitle smallTitle="" bigTitle="Who am I?" className="gradient3" />

    <div
      class="bg-white rounded-3xl flex flex-row justify-around items-center p-32"
    >
      <div class="max-w-lg">
        <p class="text-2xl">
          My name is <span class="text-accent font-bold">Juan De León</span>
        </p>
        {
          basics.summary.map((item, key) => (
            <p class={`${key !== 1 && "mt-4"} font-montserrat`}>{item}</p>
          ))
        }
      </div>

      <div id="container-01" class="flex justify-center">
        <div
          id="pic-container"
          class="relative w-[16rem] h-[23rem] border-2 border-solid border-black"
        >
          <Image
            class="w-[16rem] absolute left-[2.5rem] top-[-2.5rem]"
            src={ProfilePic}
            alt="tooned version of me"
          />
        </div>
      </div>
    </div>
    <!--  -->
  </div>
</article>

