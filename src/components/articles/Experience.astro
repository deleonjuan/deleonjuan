---
import PlaceIveWorked from "../placeIveWorked.astro";

import { work } from "@cv";
---

<article id="experience" class="min-h-screen flex flex-col justify-center">
  <div class="mb-24">
    <p>Where</p>
    <p class="text-5xl font-bold">I've worked</p>
  </div>

  {
    work.map((job) => (
      <PlaceIveWorked
        date={job.endDate}
        placeName={job.name}
        position={job.position}
        url={job.url}
        summary={job.summary}
        technollogies={job.technollogies}
      />
    ))
  }
</article>
