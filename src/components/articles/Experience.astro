---
import PlaceIveWorked from "../placeIveWorked.astro";
import SectionTitle from "../SectionTitle.astro";

import { work } from "@cv";
---

<article
  id="experience"
  class="min-h-screen flex justify-center items-center bg-[#F5F5F7] pb-20 pt-0"
>
  <div class="md:max-w-screen-md lg:max-w-screen-lg xl:max-w-screen-xl 2xl:max-w-screen-2xl 2xl:px-16">
    <SectionTitle smallTitle="Where" bigTitle="I've worked" className="gradient2"/>

    <div class="grid grid-cols-2 gap-6">
      {
        work.map((job) => (
          <PlaceIveWorked
            date={job.endDate}
            placeName={job.name}
            position={job.position}
            url={job.url}
            summary={job.summary}
            technollogies={job.technollogies}
          />
        ))
      }
    </div>
  </div>
</article>
