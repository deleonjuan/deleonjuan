---
import ExternalLinkIcon from "@/icons/external-link.astro";

interface Props {
  link: string;
  title: string;
  className?: string;
}

const { link, title, className } = Astro.props;
---

<a
  class={`cursor-pointer text-md leading-3 inline-flex items-center gap-1 mr-4 ${className}`}
  href={link}
  target="_blank"
>
  {title}
  <ExternalLinkIcon size="18" />
</a>
