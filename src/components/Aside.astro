---
import CopyIcon from "../icons/copy-document.astro";
import ExternalLink from "../icons/external-link.astro";

import { basics } from "@cv";
---

<aside id="aside-nav" class="flex items-center">
  <nav id="aside-list" class="fixed">
    <ul>
      <li>
        <a href="#about">ABOUT ME</a>
      </li>
      <li>
        <a href="#experience">EXPERIENCE</a>
      </li>
      <li>
        <a href="#projects">PROJECTS</a>
      </li>
    </ul>
    <div class="mt-12 baseText ml-2">
      <p class="text-xl mb-3 text-accent font-bold">&gt DONâ€™T BE SHY</p>
      <p class="mb-3">
        <span id="emailLink" class="inline-flex cursor-pointer">
          {basics.email}
          <CopyIcon />
        </span>
      </p>
      <label class="mr-8">
        <a class="inline-flex" href={basics.profiles[0].url} target="_blank">
          {basics.profiles[0].network}
          <ExternalLink />
        </a>
      </label>
      <label class="mr-8">
        <a class="inline-flex" href={basics.profiles[1].url} target="_blank">
          {basics.profiles[1].network}
          <ExternalLink />
        </a>
      </label>
    </div>
  </nav>
</aside>

<script>
  import { basics } from "@cv";

  /**
   * creates a "Tab" label for every click on an <a> elemetn
   */
  const navItems = document
    .getElementById("aside-list")
    .getElementsByTagName("a");
  const page = document.getElementById("page-container");

  for (let i = 0; i < navItems.length; i++) {
    const element = navItems[i];
    element.addEventListener("click", (event) => {
      const text = document.createElement("div");

      text.className = "temp-text";
      text.innerText = "tap";
      text.style.top = event.clientY - 30 + "px";
      text.style.left = event.clientX - 20 + "px";

      page.appendChild(text);

      text.classList.add("fade-out");

      setTimeout(() => {
        text.remove();
      }, 1500);
    });
  }

  /**
   * copy the email to the clipboard
   */
  const copyText = document.getElementById("emailLink");
  copyText.addEventListener("click", (e) => {
    navigator.clipboard.writeText(basics.email);
  });
</script>

<style>
  li {
    margin: 2rem 0;
    padding: 0.5rem 0.5rem;
  }
  li a {
    color: white;
    font-family: PPMonumentExtended;
    font-weight: bold;
    font-size: xx-large;
  }
  .baseText {
    font-family: PPMonumentExtended;
    font-weight: lighter;
    color: white;
  }
</style>
